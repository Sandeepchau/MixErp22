@using MixERP.Sales.Extensions
@model dynamic

@{
    ViewBag.Title = I18N.SalesEntries;
    Layout = ViewBag.SalesLayoutPath;
}

@Html.FinancePartialView("Shared/SearchView.cshtml", TenantConvention.GetTenant())

<script src="/Areas/MixERP.Sales/scripts/tasks/entry/index.js"></script>

<script>
	setTimeout(function(){
		var annotationStatus = window.Enumerable.From(window.model.Annotation).Where(function(x) {
			return x.Id === "Status";
		}).FirstOrDefault();

		annotationStatus.DefaultValue = "Unverified";
		window.model.HasVerification = true;
		window.model.Title = window.translate("SalesVerification");

		prepareView(model);
	}, 500);
</script>
